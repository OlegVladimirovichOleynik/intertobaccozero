  </head>
  <body>
    <div id="pp">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h1><center><%= image_tag("18.png")%> <br> <%= t(:agetitle) %> </center> </h1>
      </div>
      <div class="modal-body">
        <p><%= t(:agetext) %> <br> <br> <%= t(:agetext2)%> </p>
      </div>
      <div class="modal-footer">
        <a href="#" class="btn"><h4><%= t(:ageyes)%></h4></a>
        <a href="https://ru.wikipedia.org/wiki/%D0%A4%D0%B5%D0%B4%D0%B5%D1%80%D0%B0%D0%BB%D1%8C%D0%BD%D1%8B%D0%B9_%D0%B7%D0%B0%D0%BA%D0%BE%D0%BD_%D0%BE%D1%82_23_%D1%84%D0%B5%D0%B2%D1%80%D0%B0%D0%BB%D1%8F_2013_%D0%B3%D0%BE%D0%B4%D0%B0_%E2%84%96_15-%D0%A4%D0%97" class="btn"><h4><%= t(:ageno) %></h4></a>
      </div>
    </div>
    <div id="pp-bg"></div>
    <div class="bg">
      <div id="home" class="header wow bounceInDown" data-wow-delay="0.4s">
					<div class="top-header">
						<div class="container">
						<div class="logo"><%= link_to image_tag("logo.png"),welcome_index_path(@welcome, :locale =>I18n.locale) %></div>
            <nav class="top-nav">
              <ul class="top-nav">
                <% if current_page?(welcome_index_path) %>
                  <li class="active"><a href="#services" class="scroll"><%= t(:tobacco) %></a></li>
                  <li><a href="#tastes" class="scroll"><%= t(:tastes) %></a></li>
                  <li><a href="#port" class="scroll"><%= t(:about) %></a></li>
                <% else %>
                  <li class="active"><%= link_to t(:tobacco), welcome_index_path(@welcome, anchor: "services", :locale => I18n.locale) %></li>
                  <li><%= link_to t(:tastes), welcome_index_path(@welcome, anchor: "tastes", :locale => I18n.locale ) %></li>
                  <li><%= link_to t(:about), welcome_index_path(@welcome, anchor: "port", :locale => I18n.locale) %></li>
                <% end %>
                  <li><%= link_to image_tag("ru.png", :border => 0, :alt => '', :width => 30, :height => 20, :title => ''), { locale: :ru } %></li>
                  <li><%= link_to image_tag("en.png", :border => 0, :alt => '', :width => 40, :height => 30, :title => ''), { locale: :en } %></li>
              </ul>
              <a href="#" id="pull"><%= image_tag("menu-icon.png")%></a>
            </nav>
						<div class="clearfix"></div>
					</div>
				</div>
      </div>
      <%= render 'welcome/banner' %>
      <div class="social-tab">
        <div class="social">
          <a href="tel:+79110811486"><%= image_tag("wa.png")%></a>
          <a href="https://www.instagram.com/nyr_tobacco_official"><%= image_tag("inst.png")%></a>
          <a href="tel:+79523886606"><%= image_tag("phone.png")%></a>
        </div>
      </div>
		</div>
    <%= yield %>
    <script>
      $(function() {
        var pull 		= $('#pull');
          menu 		= $('nav ul');
          menuHeight	= menu.height();
        $(pull).on('click', function(e) {
          e.preventDefault();
          menu.slideToggle();
        });
        $(window).resize(function(){
              var w = $(window).width();
              if(w > 320 && menu.is(':hidden')) {
                menu.removeAttr('style');
              }
          });
      });
    </script>
    <script type="text/javascript">
      jQuery(document).ready(function($) {
        $(".scroll").click(function(event){
          event.preventDefault();
          $('html,body').animate({scrollTop:$(this.hash).offset().top},1000);
        });
      });
    </script>
    <script type="application/x-javascript">
      addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false);
      function hideURLbar(){ window.scrollTo(0,1); }
    </script>
  </body>
</html>
